<a class="card-container" href="<%= game_path(game) %>">
  <div class="demo-card-square mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand" style="background-image: url('<%= game.icon.url %>')">
      <h2 class="mdl-card__title-text"></h2>
    </div>
    <div class="mdl-card__supporting-text">
      <h2><%= game.name %></h2>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <div class="async-status status" data-short-name="<%= game.short_name %>">
        <div class="mdl-spinner mdl-js-spinner is-active"></div>
      </div>
    </div>
  </div>
</a>
