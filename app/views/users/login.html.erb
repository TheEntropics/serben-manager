<% content_for :title, 'Login' %>
<% content_for :prev_page, root_path %>

<%= form_tag login_path, method: :post do %>
  <div>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag 'Login' %>
<% end %>

<% if flash[:login] %>
  <p><%= flash[:login] %></p>
<% end %>
