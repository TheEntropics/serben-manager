<% if game.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

    <ul>
    <% game.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--6-col">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :name, class: 'mdl-textfield__label' %><br>
      <%= f.text_field :name, class: 'mdl-textfield__input' %>
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :short_name, class: 'mdl-textfield__label' %><br>
      <%= f.text_field :short_name, class: 'mdl-textfield__input' %>
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :service_name, class: 'mdl-textfield__label' %><br>
      <%= f.text_field :service_name, class: 'mdl-textfield__input' %>
    </div>
    <div>
      <%= image_tag(game.icon.url) if game.icon? %><br>
      <label for="game_icon" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-color--blue-600 mdl-color-text--white">
        Carica immagine
      </label>
      <%= f.file_field :icon, class: 'file-picker' %><br><br>
      <%= f.hidden_field :icon_cache %>
    </div>
    <div>
      <%= f.submit class: ['mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-color--amber-900 mdl-color-text--white'] %>
    </div>
  </div>
</div>
